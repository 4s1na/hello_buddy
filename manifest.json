{
  "manifest_version": 3,
  "name": "Sanrio Buddy",
  "version": "2.0",
  "description": "A cute buddy that tracks tasks and checks on you!",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hello Buddy"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/cinnamonroll.png",
    "48": "images/hellokitty.png",
    "128": "images/kuromi.png",
    "192": "images/pompompurin.png"
  }
}